    "@types/compression": "^1.7.2",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.197",
    "@types/nodemailer": "^6.4.9",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0"
  },
  "plugins": [
    {
      "transform": "typescript-transform-paths"
    },
    {
      "transform": "typescript-transform-paths",
      "afterDeclarations": true
    }
  ],
  "paths": {
    "@auth/*": [
      "src/features/auth/*"
    ],
    "@user/*": [
      "src/features/user/*"
    ],
    "@post/*": [
      "src/features/post/*"
    ],
    "@reaction/*": [
      "src/features/reactions/*"
    ],
    "@comment/*": [
      "src/features/comments/*"
    ],
    "@follower/*": [
      "src/features/followers/*"
    ],
    "@notification/*": [
      "src/features/notifications/*"
    ],
    "@image/*": [
      "src/features/images/*"
    ],
    "@chat/*": [
      "src/features/chat/*"
    ],
    "@global/*": [
      "src/shared/globals/*"
    ],
    "@service/*": [
      "src/shared/services/*"
    ],
    "@socket/*": [
      "src/shared/sockets/*"
    ],
    "@worker/*": [
      "src/shared/workers/*"
    ],
    "@root/*": [
      "src/*"
    ]
  }
}
